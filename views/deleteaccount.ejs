</head>
<body>
  <!------------------------------- data storage --------------------- -->
  <span id="datastore" data-response="<%= response %>"></span>
  <% if( ishmc ){ %>
      <%- include("./partials/navbar_for_hmc.ejs") %>
  <% }else{ %>
      <%- include('./partials/navbar.ejs') %>
